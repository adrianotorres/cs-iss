<div class="flex-column" style = "height: auto;">
  <h1> <%= t('.title') %> </h1>
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <!-- Proponents Table -->
  <div>
    <table class="table table-striped">
      <ol class="fs-2">
        <thead class="table-secondary">
          <td class="text-center fw-bold"> <%= t('.header.name') %> </td>
          <td colspan=3 class="text-center fw-bold"> <%= t('.header.action') %> </td>
        </thead>
        <% @proponent_list.items.each do |proponent| %>
          <tr class="record">
            <td class="text-center"><%= proponent.name %> </td>
            <td class="text-center"><%= button_to t('.buttons.show'), proponent_path(proponent), method: :get, class:"border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to t('.buttons.edit'), edit_proponent_path(proponent), method: :get, class:"border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to t('.buttons.delete'), proponent, method: :delete, class:"border-0 rounded-pill shadow px-3 py-2" %></td>
          </tr>
        <% end %>
      </ol>
    </table>
    <%= paginate @proponent_list.items, theme: 'bootstrap-5' %>
  </div>
  <div class="d-flex">
    <%= button_to t('.buttons.create'), new_proponent_path, method: :get , class:"btn btn-primary border-0 rounded-pill shadow p-3 m-3" %>
    <%= link_to t('.buttons.dashboard'), dashboards_path, class:"btn btn-secondary border-0 rounded-pill shadow p-3 m-3" %>
  </div>
</div>
