<h2><%= t(".title") %></h2>

<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                as: :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} #{t('.messages.minimum_characters')} " if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.buttons.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>

<p><%= link_to t('devise.sessions.new.link'), new_user_session_path %></p>
